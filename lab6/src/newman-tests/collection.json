{
  "info": {
    "name": "Lab6 Framework API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Тесты для лабораторной работы №6 (framework ветка)"
  },
  "item": [
    {
      "name": " Инициализация тестов",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// Генерируем уникальные данные для тестов",
              "const timestamp = new Date().getTime();",
              "pm.variables.set('timestamp', timestamp);",
              "pm.variables.set('uniqueLogin', 'test_user_' + timestamp);",
              "pm.variables.set('uniqueFunctionName', 'func_' + timestamp);",
              "",
              "// Логируем начало теста",
              "console.log(' Начинаем тест: ' + pm.info.requestName);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": " 1. ТЕСТЫ ПОЛЬЗОВАТЕЛЕЙ (Users)",
      "item": [
        {
          "name": "GET Все пользователи",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/users"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Тело ответа - массив', function() {",
                  "    pm.response.to.be.json;",
                  "    pm.response.to.have.jsonBody();",
                  "    pm.expect(pm.response.json()).to.be.an('array');",
                  "});",
                  "",
                  "// Сохраняем данные для следующих тестов",
                  "const users = pm.response.json();",
                  "if (users && users.length > 0) {",
                  "    pm.variables.set('existingUserId', users[0].id);",
                  "    pm.variables.set('existingUserLogin', users[0].login);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "POST Создать пользователя",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"login\": \"{{uniqueLogin}}\",\n  \"password\": \"TestPass123!\",\n  \"role\": \"TEST_ROLE\"\n}"
            },
            "url": "{{baseUrl}}/users"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус 200 или 201', function() {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "});",
                  "",
                  "pm.test('Пользователь создан', function() {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData).to.have.property('login');",
                  "    pm.expect(jsonData.login).to.equal(pm.variables.get('uniqueLogin'));",
                  "    // Сохраняем ID созданного пользователя",
                  "    pm.variables.set('createdUserId', jsonData.id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "GET Пользователь по ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/users/{{createdUserId}}"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Правильный пользователь', function() {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.id).to.equal(pm.variables.get('createdUserId'));",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "PUT Обновить пользователя",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"login\": \"updated_{{uniqueLogin}}\",\n  \"password\": \"UpdatedPass123!\",\n  \"role\": \"UPDATED_ROLE\"\n}"
            },
            "url": "{{baseUrl}}/users/{{createdUserId}}"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Данные обновлены', function() {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.login).to.include('updated_');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "DELETE Удалить пользователя",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/users/{{createdUserId}}"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус 204', function() {",
                  "    pm.response.to.have.status(204);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
